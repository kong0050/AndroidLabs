<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ListView
        android:id="@+id/lv_chat_dialog"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
    </ListView>

    <Button
        android:id="@+id/btn_chat_message_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/btn_chat_message_send"
        android:layout_alignParentBottom="true" />

    <EditText
        android:id="@+id/et_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:hint = "@string/et_chat_message"
        android:gravity="center|left"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_chat_message_receive"
        android:layout_toRightOf="@+id/btn_chat_message_send"/>

    <Button
        android:id="@+id/btn_chat_message_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_chat_message_receive"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lv_chat_dialog" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/lv_chat_dialog"/>
</RelativeLayout>